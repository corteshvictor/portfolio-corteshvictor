---
import Calendar from "icons/Calendar.astro";

// import LinkInline from "./LinkInline.astro";

interface Props {
  title: string;
  description: string;
  date: string;
}

const { title, description, date } = Astro.props;
---

<li class="mb-10 ms-6">
  <span
    class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900"
  >
    <Calendar class="size-3 text-blue-800 dark:text-blue-300" />
  </span>
  <h3 class="flex items-center mb-1 text-lg font-semibold text-gray-200">
    {title}
  </h3>
  <time class="block mb-2 text-sm font-normal leading-none text-gray-200"
    >{date}</time
  >
  <p class="mb-4 text-base font-normal text-gray-200 text-pretty">
    {description}
  </p>
</li>
